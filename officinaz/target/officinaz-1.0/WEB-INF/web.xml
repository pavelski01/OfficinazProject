<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
	id="officinaz" 
	version="3.0">
	<display-name>officinaz</display-name>
	<welcome-file-list>
   		<welcome-file>index.xhtml</welcome-file>
  	</welcome-file-list>
	<servlet>
		<servlet-name>faces-servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
        <servlet-name>login-passwd</servlet-name>
        <servlet-class>capital.officinaz.srvt.SignIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>point-of-sale</servlet-name>
        <servlet-class>capital.officinaz.srvt.CashRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>purchase</servlet-name>
        <servlet-class>capital.officinaz.srvt.Cart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>capital.officinaz.srvt.SignUp</servlet-class>
    </servlet>
	<servlet-mapping>
		<servlet-name>faces-servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
        <servlet-name>login-passwd</servlet-name>
        <url-pattern>/log.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>point-of-sale</servlet-name>
        <url-pattern>/check.do</url-pattern>
    </servlet-mapping>    
    <servlet-mapping>
        <servlet-name>purchase</servlet-name>
        <url-pattern>/cart.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/sign.do</url-pattern>
    </servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>	
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>
</web-app>